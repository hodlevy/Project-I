<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Nanny to Work" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="182*"/>
        </Grid.RowDefinitions>
        <Menu Grid.RowSpan="3">
            <MenuItem Header="Nanny">
                <MenuItem Header="Add" Click="Add_Nanny"/>
                <MenuItem Header="Delete" Click="Delete_Nanny"/>
                <MenuItem Header="Update" Click="Update_Nanny"/>
            </MenuItem>
            <MenuItem Header="Mother">
                <MenuItem Header="Add" Click="Add_Mother"/>
                <MenuItem Header="Delete" Click="Delete_Mother"/>
                <MenuItem Header="Update" Click="Update_Mother"/>
            </MenuItem>
            <MenuItem Header="Child">
                <MenuItem Header="Add" Click="Add_Child"/>
                <MenuItem Header="Delete" Click="Delete_Child"/>
                <MenuItem Header="Update" Click="Update_Child"/>
                <MenuItem Header="Alone" Click="Alone_List"/>
            </MenuItem>
            <MenuItem Header="Contract">
                <MenuItem Header="Add" Click="Add_Contract"/>
                <MenuItem Header="Delete" Click="Delete_Contract"/>
                <MenuItem Header="Update" Click="Update_Contract"/>
            </MenuItem>
            <MenuItem Header="Lists">
                <MenuItem Header="Nanny" Click="Nanny_List"/>
                <MenuItem Header="Mother" Click="Mother_List"/>
                <MenuItem Header="Child" Click="Child_List"/>
                <MenuItem Header="Contract" Click="Contract_List"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="The SUPER AWSOME Project of the Nannies" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="Red" TextAlignment="Center"/>
        <Image x:Name="image" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Stretch" Source="nanny.jpg"/>

    </Grid>
</Window>
